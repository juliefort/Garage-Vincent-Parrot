{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes identifié en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="btn-lg btn-primary">Déconnecter</a>
        </div>
    {% endif %}

        <div class="mb-5 container d-flex flex-wrap flex-column align-items-center">
        <h1 class="mb-3 font-weight-normal">Espace Administration</h1>

        <div class="col-6 d-flex flex-wrap flex-column">

        <div class="m-3">
            <label for="inputEmail">Email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus aria-describedby="email">
        </div>

        <div class="m-3">
            <label for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required aria-describedby="mot de passe">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
         </div>
        <button class="btn btn-lg btn-dark btn-outline-light rounded-4" type="submit">
            Se connecter
        </button>
        </div>
        
</form>

{% include "menu/footer.html.twig" %}
{% endblock %}
