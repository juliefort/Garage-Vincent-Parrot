{% extends 'base.html.twig' %}

{% block title %}Avis Clients{% endblock %}

{% block body %}

<section>
    
    <div class="formReview d-flex justify-content-center">
        <div class="d-flex flex-column col-6 m-5">
            <h2 class="text-center"> Laissez nous un avis ! </h2>
            <form>
                <div class="form-group my-3 py-1">
                    <label for="formTitle" class="form-label"> Titre : </label>
                    <input type="text" class="form-control" id="formTitle">
                </div>
                <div class="form-group my-3 py-1">
                    <label for="formName" class="form-label"> Votre nom de famille : </label>
                    <input type="text" class="form-control" id="formName">
                </div>
                <div class="form-group rating my-3 py-1">
                    <label for="formRating" class="form-label">  Votre note : </label>
                    <i class="fa-regular fa-star" style="color:yellow" data-star="1"></i>
                    <i class="fa-regular fa-star" style="color:yellow" data-star="2"></i>
                    <i class="fa-regular fa-star" style="color:yellow" data-star="3"></i>
                    <i class="fa-regular fa-star" style="color:yellow" data-star="4"></i>
                    <i class="fa-regular fa-star" style="color:yellow" data-star="5"></i>
                </div>
                <div class="form-group my-3 py-1">
                    <label for="formContent" class="form-label">  Votre message : </label>
                    <textarea class="form-control" id="formContent"></textarea>
                </div>
            </form>
        </div>
    </div>
</section>
{% include "menu/footer.html.twig" %} 
{% endblock %}
